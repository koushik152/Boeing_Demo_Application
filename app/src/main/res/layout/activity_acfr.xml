<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    tools:context=".main_activitys.AcfrActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/toolbar_background"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginRight="18dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details info: ACFR"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_marginRight="30dp"
                />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:layout_marginLeft="10dp"
        >
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:hint="Enter Serial Barcode"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:textColorHint="#83000000"
            android:background="@drawable/shape"
            android:singleLine="true"
            android:layout_marginRight="50dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="30dp"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/white"
            app:cardElevation="4dp"
            android:padding="8dp"

            android:layout_marginRight="14dp">


            <ImageView
                android:id="@+id/scanone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/scan1"
                android:contentDescription="Search icon" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="30dp"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/white"
            app:cardElevation="4dp"
            android:padding="8dp"

            android:layout_marginRight="14dp">


            <ImageView
                android:id="@+id/scantwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/scan2"
                android:contentDescription="Search icon" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:paddingTop="33dp"
                android:paddingBottom="18dp"
                android:text="Total Bins :5"
                android:textColor="@color/black" />

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="14dp"
                android:backgroundTint="@color/white"
                android:outlineSpotShadowColor="@color/black"
                android:padding="8dp"
                app:cardCornerRadius="15dp"


                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"

                        android:text="Shelf Life"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/acfr_shape"
                        android:gravity="center_horizontal"
                        android:paddingLeft="12dp"
                        android:text="18"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/red" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:text="@string/_15" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/orrange" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:text="=30" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/green" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:text="@string/_30" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/gray" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:text="No exp"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#26000000"
           android:layout_marginTop="0dp"

            android:padding="4dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="Scan Code 1"
                    android:textColor="@color/black" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="Part No       "
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="Min/Maxx/AMC"
                    android:textColor="@color/black" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="Cust Ref No"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="Ship Qty "
                    android:textColor="@color/black" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="Ship Dt"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="Order Qty "
                    android:textColor="@color/black" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="Order Dt"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="On Hand Qty"
                    android:textColor="@color/black" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="Last Scan Dt"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/acfrrecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="60dp"
            />


</LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/nav_items"
        style="@style/Widget.Design.BottomNavigationView"
        app:labelVisibilityMode="unlabeled" />
</RelativeLayout>